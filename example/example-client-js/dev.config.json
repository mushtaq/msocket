{
  "devOptions": {
    "port": 8081
  },
  "mount": {
    "public": "/",
    "target/scala-2.13": "/dist"
  },
  "plugins": [
    [
      "@snowpack/plugin-run-script",
      {
        "cmd": "set -x; cd ../..; sbtn example-client-js/fastLinkJS; cd -",
        "watch": "set -x; cd ../..; sbtn ~example-client-js/fastLinkJS; cd -"
      }
    ]
  ],
  "packageOptions": {
    "polyfillNode": true
  }
}
